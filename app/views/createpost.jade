doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Signup Form
  body

    section.container
      .create.post
        h1 Create your post here
        form(method='post', action='http://localhost:3000/post/create')
          p
            input(type='text', name='fullName', value='#{user.firstName} #{user.lastName}', placeholder='Fullname', required='')
          p
            input(type='text', name='postText', value='', placeholder='Your post here...', required='')
          p
            input(type='text', name='tags', value='', placeholder='Tag someone', required='')
          p.submit
            input(type='submit', name='', value='Post')
          div
       a(href='http://localhost:3000/users/dashboard') Go to dashboard
            
