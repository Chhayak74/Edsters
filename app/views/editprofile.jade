doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Login Form
  body
    section.container
      .create.profile
        h1 Fill your following profile details
        form(method='post', action='http://localhost:3000/profile/edit')
          p
            input(type='text', name='name', value='#{profile.name}', placeholder='Fullname')
          p
            input(type='text', name='email', value='#{profile.email}', placeholder='email')

          p
            input(type='number', name='mobileNumber', value='#{profile.mobileNumber}', placeholder='Mobile Number')

          p
            input(type='text', name='accountType', value='#{profile.accountType}', placeholder='Alumni or Active Member')

          p
            input(type='text', name='careerPath', value='#{profile.careerPath}', placeholder='Career Path')

          h4 Current
          p
            input(type='text', name='jobRole', value='#{profile.jobRole}', placeholder='Jobrole')
          p
            input(type='text', name='jobProfile', value='#{profile.jobProfile}', placeholder='Jobprofile')
          p
            input(type='text', name='currentCompany', value='#{profile.currentCompany}', placeholder='Current Company')
          h4 Past
          p
            input(type='text', name='company', value='#{profile.company}', placeholder='Company')
          p
            input(type='number', name='noOfYears', value='#{profile.noOfYears}', placeholder='Number of years')
          h4 Education
          p
            input(type='text', name='degree', value='#{profile.degree}', placeholder='Highest Degree')
          p
            input(type='text', name='school', value='#{profile.school}', placeholder='Institute')
          h4 Skills
          p
            input(type='text', name='skills', value='#{profile.skills}', placeholder='Skills')
          p 
            input(type='hidden',value='PUT',name='_method')


          p.submit
            input(type='submit', name='', value='Update')

          div
       a(href='http://localhost:3000/users/dashboard') Go to dashboard
