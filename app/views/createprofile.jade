doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Login Form
  body
    section.container
      .create.profile
        h1 Fill your following profile details
        form(method='post', action='http://localhost:3000/profile/create')
          p
            input(type='text', name='name', value='#{user.firstName } #{user.lastName}', placeholder='Fullname')
          p
            input(type='text', name='email', value='#{user.email}', placeholder='email')

          p
            input(type='number', name='email', value='#{user.mobileNumber}', placeholder='Mobile Number')

          p
            input(type='text', name='accountType', value='', placeholder='Alumni or Active Member', required ='')

          p
            input(type='text', name='careerPath', value='', placeholder='Career Path', required ='')

          h4 Current
          p
            input(type='text', name='jobRole', value='', placeholder='Jobrole')
          p
            input(type='text', name='jobProfile', value='', placeholder='Jobprofile')
          p
            input(type='text', name='currentCompany', value='', placeholder='Current Company')
          h4 Past
          p
            input(type='text', name='company', value='', placeholder='Company')
          p
            input(type='number', name='noOfYears', value=' ', placeholder='Number of years/months')
          h4 Education
          p
            input(type='text', name='degree', value='', placeholder='Highest Degree',required ='')
          p
            input(type='text', name='school', value='', placeholder='Institute' , required ='')
          h4 Skills
          p
            input(type='text', name='skills', value='', placeholder='Skills',  required ='')
          p.submit
            input(type='submit', name='', value='Create')
